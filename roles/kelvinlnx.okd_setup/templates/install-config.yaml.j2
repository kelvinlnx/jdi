apiVersion: v1
baseDomain: {{ virt_net_domain }}
compute:
- architecture: amd64
  hyperthreading: Enabled
  name: worker
  platform: {}
  replicas: {{ worker_nodes }}
controlPlane:
  architecture: amd64
  hyperthreading: Enabled
  name: master
  platform: {}
  replicas: {{ master_nodes }}
metadata:
  name: {{ cluster_name }}
imageContentSources:
- mirrors:
  - {{ registry_name }}:5000/ocp4/openshift4
  source: quay.io/openshift-release-dev/ocp-release
- mirrors:
  - {{ registry_name }}:5000/ocp4/openshift4
  source: quay.io/openshift-release-dev/ocp-v4.0-art-dev
networking:
  clusterNetwork:
  - cidr: 10.128.0.0/14
    hostPrefix: 23
  networkType: OpenShiftSDN
  serviceNetwork:
  - 172.30.0.0/16
platform:
  none: {}
sshKey: '{{ user_pub_key }}'
additionalTrustBundle: |
  {{ lookup('file', registry_crt, errors='ignore') | regex_replace('\n', '\n  ') }}
pullSecret: '{"auths":{"{{ registry_name }}:5000":{"auth":"{{ registry_user_info | b64encode }}","email":"{{ registry_user_email }}"}}}'
