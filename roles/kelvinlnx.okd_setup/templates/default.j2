menu tabmsg Press Tab for full configuration options on menu items.

label bootstrap
  menu label Install the ^Bootstrap machine
  {% if item.name == 'bootstrap' %}
  menu default
  {% endif %}
  kernel http://{{ registry_name }}/inst/rhcos-installer-kernel-x86_64
  append initrd=http://{{ registry_name }}/inst/rhcos-installer-initramfs.x86_64.img rd.neednet=1 coreos.inst=yes coreos.inst.image_url=http://{{ registry_name }}/inst/rhcos-metal.x86_64.raw.gz coreos.inst.ignition_url=http://{{ registry_name }}/inst/bootstrap.ign.{{ virt_net_domain }} coreos.inst.install_dev=vda ip=dhcp

menu separator # insert an empty line

